<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon/favicon-16x16.png') }}">

    <title>{% block title %}News Portal{% endblock %}</title>
</head>
<body>
<header class="main-header">
    <div class="container">
        <nav class="main-nav">
            <div class="nav-brand">
                <a href="{{ path('app_feed') }}">News Portal</a>
            </div>

            <div class="nav-links">
                <a href="{{ path('app_feed') }}">Home</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_dashboard') }}">Admin Panel</a>
                {% endif %}
            </div>
        </nav>
    </div>
</header>

<main class="main-content">
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block content %}{% endblock %}
    </div>
</main>

<footer class="main-footer">
    <div class="container">
        <p>&copy; {{ "now"|date("Y") }} News Portal. All rights reserved.</p>
    </div>
</footer>

{% block importmap %}{{ importmap('app') }}{% endblock %}
</body>
</html>
