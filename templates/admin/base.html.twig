{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block bodyClass %}admin{% endblock %}

{% block header %}
    <header class="main-header">
        <div class="container">
            <nav class="main-nav">
                <div class="nav-brand">
                    <a href="{{ path('app_admin_dashboard') }}">Admin</a>
                </div>

                <div class="nav-links">
                    <a href="{{ path('app_feed') }}">View site</a>
                    <a href="{{ path('app_admin_category_list') }}" {% if app.request.get('_route') starts with 'app_admin_category' %}class="active"{% endif %}>Categories</a>
                    <a href="{{ path('app_admin_news_list') }}" {% if app.request.get('_route') starts with 'app_admin_news' %}class="active"{% endif %}>News</a>
                    <a href="{{ path('_logout_main') }}">Logout</a>
                </div>
            </nav>
        </div>
    </header>
{% endblock %}

{% block content %}
    <h1>Here will be the dashboard!</h1>
{% endblock %}

{% block importmap %}{{ importmap('admin') }}{% endblock %}
