{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="content-header">
        <h1>Categories</h1>
        <a href="{{ path('app_admin_category_create') }}" class="btn btn-primary">Create Category</a>
    </div>

    <div class="content-body">
        <table class="admin-table">
            <thead>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.title }}</td>
                    <td>{{ category.createdAt|date('Y-m-d H:i') }}</td>
                    <td>
                        <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-sm">Edit</a>
                        <button
                            type="button"
                            class="btn btn-sm btn-danger"
                            data-controller="archive-item"
                            data-archive-item-url-value="{{ path('app_admin_category_archive', {id: category.id}) }}"
                            data-archive-item-confirm-message-value="Are you sure you want to delete this category?"
                            data-archive-item-success-message-value="Category deleted successfully"
                            data-archive-item-error-message-value="Failed to delete category"
                            data-action="archive-item#archive">
                            Delete
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
