{% extends 'admin/base.html.twig' %}

{% block title %}Edit Category - {{ category.title }}{% endblock %}

{% block content %}
    <div class="content-header">
        <h1>Edit Category</h1>
    </div>

    <div class="content-body">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-actions">
                    <a href="{{ path('app_admin_category_list') }}" class="btn">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
