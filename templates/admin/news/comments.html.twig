{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="content-header">
        <h1>Comments for "{{ news.title }}"</h1>
        <a href="{{ path('app_admin_news_list') }}" class="btn">Back to News</a>
    </div>

    <div class="content-body">
        <div class="card">
            <div class="card-body">
                <table class="admin-table">
                    <thead>
                    <tr>
                        <th>Author</th>
                        <th>Content</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.author.email }}</td>
                            <td>{{ comment.content }}</td>
                            <td>{{ comment.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <button
                                    type="button"
                                    class="btn btn-sm btn-danger"
                                    data-controller="archive-item"
                                    data-archive-item-url-value="{{ path('app_admin_comment_archive', {id: comment.id}) }}"
                                    data-archive-item-confirm-message-value="Are you sure you want to delete this comment?"
                                    data-archive-item-success-message-value="Comment deleted successfully"
                                    data-archive-item-error-message-value="Failed to delete comment"
                                    data-action="archive-item#archive">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
