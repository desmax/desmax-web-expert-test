{% apply inline_css %}
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                font-family: Arial, sans-serif;
                line-height: 1.6;
                color: #333;
                max-width: 800px;
                margin: 0 auto;
                padding: 20px;
            }
            h1 {
                color: #333;
                margin-bottom: 10px;
            }
            .stats-table {
                width: 100%;
                margin: 20px 0;
                border-collapse: collapse;
                background: #fff;
            }
            .stats-table th {
                background: #f5f5f5;
                padding: 10px;
                text-align: left;
                border-bottom: 2px solid #ddd;
            }
            .stats-table td {
                padding: 10px;
                border-bottom: 1px solid #eee;
            }
            .period {
                color: #666;
                margin-bottom: 20px;
            }
            .footer {
                margin-top: 20px;
                padding-top: 20px;
                border-top: 1px solid #eee;
                font-size: 12px;
                color: #666;
            }
            .category-badge {
                display: inline-block;
                padding: 2px 8px;
                background: #e9ecef;
                border-radius: 12px;
                margin: 2px;
                font-size: 12px;
            }
        </style>
    </head>
    <body>
    <h1>Weekly News Statistics</h1>
    <p class="period">Period: {{ dateFrom|date('Y-m-d') }} - {{ dateTo|date('Y-m-d') }}</p>

    <table class="stats-table">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Comments</th>
            <th>Author</th>
            <th>Categories</th>
        </tr>
        </thead>
        <tbody>
        {% for stat in stats %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('app_news_show', {id: stat.id}) }}">{{ stat.title }}</a></td>
                <td>{{ stat.commentCount }}</td>
                <td>{{ stat.author }}</td>
                <td>
                    {% for category in stat.categories %}
                        <span class="category-badge">{{ category }}</span>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="footer">
        <p>This is an automated message. Please do not reply to this email.</p>
        <p>Â© {{ "now"|date("Y") }} News Portal. All rights reserved.</p>
    </div>
    </body>
    </html>
{% endapply %}
